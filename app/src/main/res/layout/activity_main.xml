<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fairenough.simpletipcalculator.MainActivity">

    <TextView
        android:id="@+id/tipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Tip:"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textSize="36sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="68dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:columnCount="3"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        android:id="@+id/gridLayout2">

        <Button android:text="1"
            android:id="@+id/One" />

        <Button android:text="2"
            android:id="@+id/Two"/>

        <Button android:text="3"
            android:id="@+id/Three"/>

        <Button android:text="4"
            android:id="@+id/Four"/>

        <Button android:text="5"
            android:id="@+id/Five" />

        <Button android:text="6"
            android:id="@+id/Six"/>

        <Button android:text="7"
            android:id="@+id/Seven" />

        <Button android:text="8"
            android:id="@+id/Eight" />

        <Button android:text="9"
            android:id="@+id/Nine"/>

        <Button android:text="0"
            android:id="@+id/Zero"/>

        <Button android:text="."
            android:id="@+id/Point" />

        <Button android:text="C"
            android:id="@+id/Clear"/>
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:columnCount="3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.508">

        <Button
            android:id="@+id/fifteenTip"
            android:text="15%" />

        <Button
            android:id="@+id/twentyTip"
            android:text="20%" />

        <Button
            android:id="@+id/goodTip"
            android:text="Good Person" />

    </GridLayout>

    <EditText
        android:id="@+id/tipAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="36sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tipText"
        app:layout_constraintLeft_toRightOf="@+id/tipText" />

    <EditText
        android:id="@+id/calcTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintLeft_toLeftOf="@+id/gridLayout2"
        app:layout_constraintRight_toRightOf="@+id/gridLayout2" />

</android.support.constraint.ConstraintLayout>
